        <content>
            <f:SimpleForm>
                <f:content>
                    <Label text="Enter text" />
                    <Input id="xmlText"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="Close" press="handleClosePress" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>