<mvc:View controllerName="workshop.UI5Module.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <l:VerticalLayout>
                            <Text text="Default: {/dayDefault}" />
                            <Text text="DE: {/dayDE}" />
                            <Text text="EN: {/dayEN}" />
                        </l:VerticalLayout>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
